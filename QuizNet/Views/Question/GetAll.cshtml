@model List<QuizNet.BusinessLogic.DTO.QuestionsDto>
@{
    ViewData["Title"] = "GetAll";
}

<h1>Questions</h1>
<br />
<div class="mb-4">
    <a class="btn btn-primary"
       asp-controller="Question"
       asp-action="Create">Add new question!</a>
    <div class ="btn-group dropright">
        <button class="btn btn-primary dropdown-toggle"  data-toggle="dropdown">Generate Quiz!</button>
        <div class=" dropdown-menu">
            <a class=" dropdown-item" asp-controller="Question" asp-action="GenerateQuiz" asp-route-quizType="@("random")">Random Quiz</a>
            <a class=" dropdown-item" asp-controller="Question" asp-action="GenerateQuiz" asp-route-quizType="@("recent")">Recently added questions quiz</a>
        </div>
    </div>
</div>
<hr />
@foreach (var question in Model)
{
    <div class="mb-5">
        <div class="row">
            <div class="col-sm-9">
                <h3>@question.CONTENT</h3>
            </div>
            <div class="col-sm-1">
                <a class="btn btn-primary"
                   asp-controller="Question"
                   asp-action="Edit"
                   asp-route-id="@question.QID.ToString()">Edit</a>
            </div>
            <div class="col-sm-1">
                <a class="btn btn-outline-primary"
                   asp-controller="Question"
                   asp-action="Get"
                   asp-route-id="@question.QID.ToString()">Details</a>
            </div>
            <div class="col-sm-1">
                <a class="btn btn-danger"
                   asp-controller="Question"
                   asp-action="Delete"
                   asp-route-id="@question.QID.ToString()">Delete</a>
            </div>

        </div>
        <br />
    </div>


}



